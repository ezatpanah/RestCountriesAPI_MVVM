<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/swipeView"
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="right" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/check"
            motion:layout_constraintEnd_toEndOf="@id/nextPageBase"
            android:layout_width="48dp"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="@id/nextPageBase"
            android:layout_marginEnd="10dp"
            motion:layout_constraintTop_toTopOf="@id/nextPageBase"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0" />
        <Constraint
            android:id="@+id/swipeView"
            android:layout_width="80dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/nextPageBase"
            android:layout_marginStart="20dp"
            motion:layout_constraintTop_toTopOf="@id/nextPageBase"
            motion:layout_constraintStart_toStartOf="parent" >
            <CustomAttribute
                motion:attributeName="cardBackgroundColor"
                motion:customColorValue="@color/cadetBlue" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/nextPageTitle"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/nextPageBase"
            motion:layout_constraintTop_toTopOf="@id/nextPageBase"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="0"
            android:scaleY="0" />
        <Constraint
            android:id="@+id/unlockFill"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/swipeView"
            android:layout_marginStart="20dp"
            motion:layout_constraintTop_toTopOf="@id/swipeView"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="@+id/nextPageBase" />
        <Constraint
            android:id="@+id/swipeView"
            android:layout_width="80dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/nextPageBase"
            motion:layout_constraintTop_toTopOf="@id/nextPageBase"
            motion:layout_constraintEnd_toEndOf="@+id/nextPageBase">
            <CustomAttribute
                motion:attributeName="cardBackgroundColor"
                motion:customColorValue="@color/white" />
        </Constraint>
        <Constraint
            android:id="@+id/arrow"
            motion:layout_constraintEnd_toEndOf="@id/swipeView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="@id/swipeView"
            motion:layout_constraintTop_toTopOf="@id/swipeView"
            motion:layout_constraintStart_toStartOf="@id/swipeView"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0" />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/nextPage"
        motion:deriveConstraintsFrom="@+id/end" >
        <Constraint
            android:id="@+id/swipeView"
            android:layout_width="80dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/nextPageBase"
            android:layout_marginStart="20dp"
            motion:layout_constraintTop_toTopOf="@id/nextPageBase"
            motion:layout_constraintStart_toStartOf="parent"
            android:scaleX="30"
            android:scaleY="30" />
        <Constraint
            android:id="@+id/check"
            motion:layout_constraintEnd_toEndOf="@id/nextPageBase"
            android:layout_width="48dp"
            android:layout_height="48dp"
            motion:layout_constraintBottom_toBottomOf="@id/nextPageBase"
            android:layout_marginEnd="10dp"
            motion:layout_constraintTop_toTopOf="@id/nextPageBase"
            android:scaleX="0"
            android:scaleY="0" />
        <Constraint
            android:id="@+id/tvDescription"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@id/guideline2"
            android:layout_marginTop="80dp"
            android:scaleX="0"
            android:scaleY="0"
            android:alpha="0" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/end"
        motion:constraintSetEnd="@+id/nextPage"
        motion:autoTransition="animateToEnd"
        motion:duration="300"/>
</MotionScene>